<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>AsyncZuulServlet</servlet-name>
        <servlet-class>com.netflix.zuul.AsyncZuulServlet</servlet-class>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>AsyncZuulServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.netflix.zuul.InitializeServletListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>scriptManager</servlet-name>
        <servlet-class>com.netflix.zuul.FilterScriptManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>scriptManager</servlet-name>
        <url-pattern>/admin/scriptmanager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>filterLoader</servlet-name>
        <jsp-file>/admin/filterLoader.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>filterLoader</servlet-name>
        <url-pattern>/admin/filterLoader.jsp</url-pattern>
    </servlet-mapping>

</web-app>
